<h1>Parada de ônibus</h1>
<div class="block" id="block-login">
	<h2>Cadastro</h2>
	<div class="content login">
		<div class="flash">
			<div class="message error">
	      <%= devise_error_messages! %>
      </div>
    </div>
		<div class="form login">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<div class="group wat-cf">
				<div class="left"><%= f.label :email, :class => "label right" %></div>
				<div class="right"><%= f.email_field :email, :class => "text_field" %></div>
			</div>

			<div class="group wat-cf">
				<div class="left"><%= f.label :senha, :class => "label right" %></div>
				<div class="right"><%= f.password_field :password, :class => "text_field" %></div>
			</div>

			<div class="group wat-cf">
				<div class="left"><%= f.label "Confirmação", :class => "label right" %></div>
				<div class="right"><%= f.password_field :password_confirmation, :class => "text_field" %></div>
			</div>

			<div class="group navform wat-cf">
				<div class="right">
					<button type="submit" class="button">
						<%= image_tag("web-app-theme/icons/tick.png") %> Enviar
					</button>
				</div>
			</div>

		<% end %>
		</div>
		<%= render :partial => "devise/shared/links" %>
	</div>
</div>
