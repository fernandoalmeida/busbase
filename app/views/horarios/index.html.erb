<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", linha_horarios_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_linha_horario_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Horarios</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">NÃºmero</th>
          <th><%= t("activerecord.attributes.horario.linha_id", :default => t("activerecord.labels.linha_id", :default => "Linha")) %></th>
          <th>Hora</th>
          <th>Dia da Semana</th>
          <th>Sentido</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @horarios.each do |horario| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= horario.linha.numero %></td>
          <td><%= link_to horario.linha.nome, linha_horario_path(horario.linha, horario) %></td>
          <td><%= l(horario.hora, :format => :time) %></td>
          <td><%= horario.dia_da_semana %></td>
          <td><%= horario.sentido %></td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", linha_horario_path(horario.linha, horario) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_linha_horario_path(horario.linha, horario) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", linha_horario_path(horario.linha, horario), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
