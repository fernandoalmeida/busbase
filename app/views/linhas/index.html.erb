<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", linhas_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_linha_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Linhas</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th><%= t("activerecord.attributes.linha.numero", :default => t("activerecord.labels.numero", :default => "Numero")) %></th>
          <th><%= t("activerecord.attributes.linha.nome", :default => t("activerecord.labels.numero", :default => "Nome")) %></th>
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @linhas.each do |linha| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= linha.id %></td>
          <td><%= link_to linha.numero, linha_path(linha) %></td>
          <td><%= link_to linha.nome, linha_path(linha) %></td>
          <td><%= l(linha.created_at) %></td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", linha_path(linha) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_linha_path(linha) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", linha_path(linha), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>


      <% if @doc %>
				<table>
					<thead>
						<tr>
							<th>CÃ³digo</th>
							<th>Nome</th>
						</tr>
					</thead>
					<tbody>
				<% @doc.css('.fundocadastrologin').each do |linha| %>
					<tr>
						<td><%= linha.at('td div').text %></td>
						<td><%= linha.at('td[@width="238"]').text %></td>
					</tr>
				<% end %>
					<tbody>
				</table>
			<% end %>


      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
