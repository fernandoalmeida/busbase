  <div class="fields">
    <%= f.input :numero, :wrapper_html => { :class => "group" }, :hint => 'Ex: 1234-A' %>
    <%= f.input :nome, :wrapper_html => { :class => "group" }, :hint => 'Ex: RodoviÃ¡ria Circular - R1' %>
    <%= f.association :empresa, :label_method => :nome, :wrapper_html => { :class => "group" } %>
    <%= f.association :bairro_partida, :label_method => :nome, :wrapper_html => { :class => "group" } %>
    <%= f.association :bairro_chegada, :label_method => :nome, :wrapper_html => { :class => "group" } %>
