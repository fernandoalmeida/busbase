<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", linha_horarios_idas_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_linha_horarios_ida_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", linha_horarios_ida_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.horarios_ida.linha_id", :default => t("activerecord.labels.linha_id", :default => "Linha")) %>:</b>
          <%= @horarios_ida.linha_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.horarios_ida.dia_da_semana", :default => t("activerecord.labels.dia_da_semana", :default => "Dia da semana")) %>:</b>
          <%= @horarios_ida.dia_da_semana %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.horarios_ida.hora", :default => t("activerecord.labels.hora", :default => "Hora")) %>:</b>
          <%= @horarios_ida.hora %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => t("web-app-theme.edit", :default=> "Edit")) + " " + t("web-app-theme.edit", :default=> "Edit"), edit_linha_horarios_ida_path(@horarios_ida.linha, @horarios_ida), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => t("web-app-theme.delete", :default=> "Delete")) + " " + t("web-app-theme.delete", :default => "Delete"), linha_horarios_ida_path(@horarios_ida.linha, @horarios_ida), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
